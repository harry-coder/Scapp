<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView

        android:id="@+id/cardLayout"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/cardview_shape"

        app:cardCornerRadius="2dp"


        app:cardElevation="5dp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <TextView
                android:id="@+id/tv_millname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-medium"

                android:textColor="#313641"
                android:textSize="19sp"
                android:textStyle="normal"
                tools:text="Kejriwal Mills and Textlies Pvt. Ltd." />


            <TextView
                android:id="@+id/tv_rate"
                android:layout_width="80dp"

                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_alignStart="@+id/tv_millname"
                android:layout_marginBottom="15dp"

                android:fontFamily="sans-serif-medium"


                android:textColor="#656d7c"
                android:textSize="15sp"
                android:textStyle="normal"
                tools:text="â‚¹ 13.87/kg" />


            <TextView

                android:id="@+id/tv_ovalshape"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_alignBottom="@+id/tv_rate"

                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_rate"

                android:background="@drawable/oval_shape"
                android:textColor="#656d7c"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_rate"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/tv_ovalshape"
                android:fontFamily="sans-serif-medium"

                android:textColor="#656d7c"
                android:textSize="15sp"
                android:textStyle="normal"
                tools:text="189 kms" />


            <TextView
                android:id="@+id/tv_recommended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_distance"
                android:layout_alignBottom="@+id/tv_distance"
                android:layout_alignParentEnd="true"

                android:layout_marginEnd="5dp"

                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/tv_distance"
                android:gravity="center"
                android:text="Recommended"
                android:textColor="#35be5f"
                android:textSize="14sp"
                android:visibility="invisible" />

            <!--
                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#35be5f"

                            android:layout_marginStart="22dp"
                            android:text="Recommended"
                            android:layout_alignBottom="@+id/tv_distance"
                            android:layout_toEndOf="@+id/tv_distance"

                            />
            -->


            <ImageView
                android:id="@+id/im_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/next_icon" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
