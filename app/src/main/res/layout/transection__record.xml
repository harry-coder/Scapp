
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.harpreet.scrapper.Different_Forms.Transection_Record">

    <!-- TODO: Update blank fragment layout -->


    <EditText
        android:id="@+id/transactio_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"

        android:layout_marginStart="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/transactio_Id"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/transactio_Id"
        android:src="@drawable/calendar" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:id="@+id/textInputLayout"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/transactio_Id"
        android:layout_alignStart="@+id/transactio_Id"
        android:layout_toStartOf="@+id/imageView2">

        <EditText
            android:id="@+id/Name"
            android:layout_width="233dp"
            android:layout_height="wrap_content"


            android:background="@drawable/input_background"
            android:ems="10"

            android:hint="Enter Vendor Id"

            android:inputType="textPassword"
            android:padding="15dp"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true" />



    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textInputLayout"
        android:layout_alignStart="@+id/imageView2"
        android:text="Generate" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textInputLayout"
        android:layout_below="@+id/textInputLayout"
        android:layout_marginTop="30dp"
        android:text="Select Item 1"
        android:textSize="20dp"
        />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/scrap_type"
        android:layout_width="312dp"
        android:layout_height="40sp"

        android:layout_below="@+id/textView6"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/transactio_Id"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/scrap_type"
        android:layout_below="@+id/scrap_type"
        android:layout_marginTop="30dp"
        android:text="Select Item 2"
        android:textSize="20sp"
        />

    <com.jaredrummler.materialspinner.MaterialSpinner
        android:id="@+id/scrap_type1"
        android:layout_width="312dp"
        android:layout_height="40dp"

        android:layout_below="@+id/textView7"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@+id/transactio_Id"
        />



</RelativeLayout>
